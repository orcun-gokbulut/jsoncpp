{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Configure - Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_INSTALL_PREFIX=./output",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Configure - Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=./output",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--install",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        }
    ]
}
