{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Create Build Directory",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/Build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Configure - Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_INSTALL_PREFIX=./Output",
                "-DJSONCPP_BUILD_TESTS=Yes",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "dependsOn":[
                "Create Build Directory"
            ]
        },
        {
            "label": "Configure - Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=./Output",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "dependsOn":[
                "Create Build Directory"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": [
                "$gcc",
                "$msCompile"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "ctest",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/Build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/Build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--install",
                "${workspaceFolder}/Build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Build"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false
            },
            "problemMatcher": []
        }
    ]
}
